<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.globalsuccess.club.globalsuccesssamegame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.globalsuccess.club.globalsuccesssamegame.HomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.globalsuccess.club.globalsuccesssamegame.GameScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_game_screen"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="net.globalsuccess.club.globalsuccesssamegame.SettingScreen"
            android:label="@string/title_setting_screens" >
        </activity>
        <activity
            android:name="net.globalsuccess.club.globalsuccesssamegame.ScoreScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_score_screen"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="net.globalsuccess.club.globalsuccesssamegame.InfoScreen"
            android:label="@string/title_activity_info_screen" >
        </activity>
        <activity
            android:name="net.globalsuccess.club.globalsuccesssamegame.AdvertScreen"
            android:label="@string/title_activity_advert_screen" >
        </activity>
    </application>

</manifest>